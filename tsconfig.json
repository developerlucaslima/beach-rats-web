{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["*"],
      "@/components": ["components"],
      "@/hooks": ["hooks"],
      "@/types": ["types"],
      "@/utils": ["utils"],
      "@/styles": ["styles"],
      "@/assets": ["assets"],
      "@/services": ["services"],
      "@/store": ["store"],
      "@/lib": ["lib"],
      "@/config": ["config"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
